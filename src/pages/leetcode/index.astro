---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { slugFromId } from "../../utils";

const posts = await getCollection("leetcode");
---

<BaseLayout title="LeetCode â€” Aidan Sinclair" description="LeetCode solutions">
  <h1 class="heading">LeetCode</h1>
  <ul class="list">
    {posts.map((post) => (
      <li class="item">
        <a href={`/leetcode/${slugFromId(post.id)}/`}>{post.data.title}</a>
        <span class:list={["diff", post.data.difficulty.toLowerCase()]}>{post.data.difficulty}</span>
      </li>
    ))}
  </ul>
  {posts.length === 0 && <p class="empty">No problems yet.</p>}
</BaseLayout>

<style>
  .heading {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .list {
    list-style: none;
    padding: 0;
  }

  .item {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: 0.5rem 0;
    border-bottom: 1px solid #f0f0f0;
    gap: 1rem;
  }

  .item a {
    font-size: 0.9375rem;
    color: #1a1a1a;
  }

  .diff {
    font-size: 0.8125rem;
    font-weight: 500;
    white-space: nowrap;
  }

  .diff.easy {
    color: #16a34a;
  }

  .diff.medium {
    color: #d97706;
  }

  .diff.hard {
    color: #dc2626;
  }

  .empty {
    color: #888;
    font-size: 0.9375rem;
  }
</style>
